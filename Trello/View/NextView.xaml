<UserControl x:Class="Trello.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trello.View"
             DataContext="{Binding NextViewModel, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding ScreenTitle}" FontSize="40" HorizontalAlignment="Center" ToolTipService.ToolTip="{Binding ScreenTitle}" 
                   Margin="200,0,200,0" VerticalAlignment="Top" Foreground="Green" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>

        <Button Grid.Row="0" Grid.RowSpan="2" Content="NEXT" MinWidth="100" MinHeight="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20"
                Command="{Binding NextCommnd}"/>
    </Grid>
</UserControl>
