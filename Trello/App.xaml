<Application x:Class="Trello.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Trello" 
             StartupUri="MainWindow.xaml" >
  <Application.Resources>
    <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <!--           
        <ResourceDictionary Source="pack://application:,,,/Trello;component/Resources/AppStyles.xaml"/>
        -->
            <ResourceDictionary Source="/Resources/AppStyles.xaml" />
        </ResourceDictionary.MergedDictionaries>

        <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" xmlns:vm="clr-namespace:Trello.ViewModel" />
    </ResourceDictionary>
  </Application.Resources>
</Application>